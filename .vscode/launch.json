{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Remix App with Vite",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/remix",
      "args": ["vite:dev"],
      "runtimeArgs": ["--inspect-brk"],
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
